<h1>Sign in</h1>

<div class="row">
	<div class="span 6 offset 3">
		<%= form_for("user", url: user_session_path) do |f| %>

		<%= f.label :email %>
		<%= f.email_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>

		<p>New User?<%= link_to "Sign Up Now", signup_path %> </p>

	</div>
</div>